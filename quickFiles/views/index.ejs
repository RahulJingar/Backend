<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuickFiles</title>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900">
        <h1 class="text-white text-5xl ml-150 mb-8 p-8">QuickFiles</h1>
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-xl outline-none"
                type="text"
                placeholder="Enter Name..."
                name="title"
                >

                <textarea class="block px-5 py-2 bg-zinc-800 h-20 resize-none mt-2 w-full rounded-xl outline-none"
                placeholder="Write Your Task Details..."
                name="details">
            </textarea>

                <input 
                class="mt-8 bg-blue-500 hover:bg-blue-900 curser-pointer rounded-xl p-3 ml-[650px]"
                type="submit"
                value="Create Task"
                >

            </form>
        </div>

        <div class="tasks p-10 flex flex-wrap gap-3">
            <% if(files.length > 0 ){ %>
                 <% files.forEach(function(val){ %>
                     <div class="task min-w-72 rounded-md px-3 py-4 bg-zinc-800">
                <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                <div class="flex w-full justify-between mt-3 items-center">
                <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read more</a>
                <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>
                </div>
            </div>
           <% }) %>
           <% }else{ %>
            <h1 class="text-zinc-300 ml-[670px]">No Task Yet.</h1>
         <% } %>
                     

        </div>
    </div>
</body>
</html>