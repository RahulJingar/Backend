<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">

        <div>
            <a class="text-blue-500" href="/">Back to Home</a>
        </div>

            <h1 class="text-3xl mt-3 tracking-tighter mb-3">All Users</h1>

            <div class="users flex gap-3 flex-wrap">
            
                <% users.forEach(function(user){ %>
                      <div class="w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-500 overflow-hidden">
                         <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="">
                    </div>
                    <h1 class="text-xl tracking-tighter mt-3"><%= user.name %></h1>
                    <h3 class="text-zinc-500"><%= user.email %></h3>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-600" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                    </div>
                </div>
               <% })%>
             

            </div>
    </div>
</body>
</html>