<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>App</title>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 text-white p-10 ">
              <div class="flex justify-end w-full">
        <a class="bg-red-400 rounded-md px-3 py-2 text-sm mb-5 inline-block hover:bg-red-600 curser-pointer" href="/logout">logout</a>
        </div>

        <form action="/post" method="post">
            <h2 class="text-3xl mb-5">Hello, <%= user.username %>ðŸ‘‹</h2>
            <h2 class="mb-5">you can create a new post</h2>
            <form action="/post" method="post">
                <textarea class="resize-none border-2 outline-none border-zinc-500 rounded-md w-1/3" placeholder="what's on your mind" name="content">
                </textarea>
                <button class="px-3 py-2 bg-blue-500 hover:bg-blue-900  rounded-md curser-pointer block text-sm mt-2 w-40">Create New Post</button>
            </form>

            <div class="posts mt-20">
                <h3 class="text-zinc-400">Your Posts.</h3>
                <div class="postcontainer mt-5">
                
                 <% user.post.reverse().forEach(function(post){ %>
                     <div class="post w-1/3 p-4 rounded-md mb-4 bg-zinc-800 border-2 border-zinc-800">
                        <h4 class="text-blue-500 mb-2"><%= user.username %></h4>
                        <p class="text-sm tracking-tight"><%= post.content %></p>

                        <small class="mt-2 inline-block"> <%= post.likes.length %> likes</small>

                        <div class="btn flex mt-5 gap-5">
                            <a class="text-blue-500" href="/like/<%= post._id %>"><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %></a>
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">edit</a>
                        </div>

                    </div>
                 <% }) %>
                  
               

                    
                </div>
            </div>




        </form>
    </div>
</body>
</html>